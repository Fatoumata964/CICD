pipeline{
    agent any
    options {
      timeout(300)
    }
    
    stages{ 
        
        stage('Test Unitaires avec Maven'){
            steps{
                
                    sh 'mvn clean install test'
                }
            }
            stage('Analyse du code avec SonarQube'){
                steps{
                    withSonarQubeEnv('today') {
                        sh 'mvn sonar:sonar'
                    }
                    sleep(20)
                    timeout(time: 1, unit: 'HOURS') {
                        script{
                          def qg = waitForQualityGate()
                           if (qg.status != 'OK') {
                              error "Pipeline aborted due to quality gate failure: ${qg.status}" 
                           } 
                        }
                    }
                }
           }
        stage('Packaging avec Maven'){
            steps{
                
                    sh 'mvn clean package'
                }
            }
        
        stage('Livraison Continue avec Nexus'){
            steps{
                
                  nexusArtifactUploader artifacts: [
                      [artifactId: 'TestCI', classifier: '', file: '/var/lib/jenkins/workspace/diourbel/target/TestCI-1.0-SNAPSHOT.jar', type: 'jar']
                  ], 
                      credentialsId: 'cc3fad3d-c9c0-4b63-9c4e-803411b39494', 
                      groupId: 'org.example',
                      nexusUrl: 'mosef.westeurope.cloudapp.azure.com:8082', 
                      nexusVersion: 'nexus3',
                      protocol: 'http',
                      repository: 'test',
                      version: '3.0-SNPAPSHOT'  
                }
            }
            stage('Deploiment Continue avec Ansible '){
            steps{
                
                   ansiblePlaybook credentialsId: 'c3cd65ca-1b8b-4ce1-9e4c-c3300fdd9479',
                   installation: 'diourbelAnsible',
                   inventory: 'dev.inv',
                   playbook: 'DeployWithInstall.yaml'
                }
            }
     }
}
